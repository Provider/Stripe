{
    "name": "provider/stripe",
    "description": "Stripe data provider for Porter.",
    "authors": [
        {
            "name": "Bilge",
            "email": "bilge@scriptfusion.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "connectors/http": "^3",
        "eloquent/enumeration": "^5",
        "scriptfusion/porter": "^5"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^7"
    },
    "autoload": {
        "psr-4": {
            "ScriptFUSION\\Porter\\Provider\\Stripe\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ScriptFUSIONTest\\Porter\\Provider\\Stripe\\": "test"
        }
    },
    "scripts": {
        "test": "phpunit -c test"
    },
    "config": {
        "sort-packages": true
    }
}
